@using AgroFichasWeb.Models
@model CAL_ResponsableArea
@{
    ViewBag.Title = "Responsable de área";
    ViewBag.SubTitle = "Editar Responsable de área";
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";

}
@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "") {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<!-- start: page -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">@ViewBag.SubTitle</h2>
            </header>
            @using (Html.BeginForm())
            {
                <div class="panel-body">
                    <div class="form-horizontal form-bordered">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Planta producción<span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdPlanta", Model.GetPlantaProduccion(Model.IdPlanta), new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessage("IdPlanta")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Área<span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdArea", Model.GetAreas(Model.IdArea), "(Seleccione Área)", new { @class = "form-control", @disabled = "disabled" })
                                        @Html.ValidationMessage("IdArea")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Responsable de área<span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("UserID", Model.GetResponsables(Model.UserID), "(Seleccione Responsable)", new { @class = "form-control" })
                                        @Html.ValidationMessage("UserID")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 center">
                            <input type="submit" class="btn btn-primary" value="Guardar este Responsable" />
                        </div>
                    </div>
                </footer>
            }
        </section>
    </div>
</div>
<!-- end: page -->