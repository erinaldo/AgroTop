@using AgroFichasWeb.Models
@model OPR_RegistroEnvasado

@{
    ViewBag.Title = "Registro de Turno de Envasado";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
    var registroTurno = (OPR_RegistroTurno)ViewData["registroTurno"];
    var productosList = (IEnumerable<SelectListItem>)ViewData["productosList"];
    var clientesList = (IEnumerable<SelectListItem>)ViewData["clientesList"];
}

@section VendorCSS
{
    <!-- Specific Page Vendor CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/bootstrap-timepicker/css/bootstrap-timepicker.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/bootstrap-timepicker/css/MvcBootstrapTimepicker.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/datetimepicker-2.5.11/jquery.datetimepicker.css")" />
}

@section VendorScripts
{
    <!-- Specific Page Vendor -->
    <script src="@Url.Content("~/Content/porto/vendor/bootstrap-timepicker/bootstrap-timepicker.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/bootstrap-timepicker/MvcBootstrapTimepicker.js")"></script>
    <script src="@Url.Content("~/Scripts/datetimepicker-2.5.11/build/jquery.datetimepicker.full.min.js")"></script>
}

@section CustomScripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "")
            {
                $(".field-validation-error").show();
            } 
        });
    </script>
}

<section role="main" class="content-body">
    <!-- start: page -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    @if (Model.IdRegistroEnvasado == 0)
                    {
                        <h2 class="panel-title">Registrar Envasado del Turno #@registroTurno.Correlativo @registroTurno.OPR_Turno.OPR_TipoTurno.Descripcion</h2>
                    }
                    else
                    {
                        <h2 class="panel-title">Editar Envasado #@Model.IdRegistroEnvasado</h2>
                    }
                </header>
                @using (Html.BeginForm())
                {
                    <div class="panel-body">
                        <div class="form-horizontal form-bordered">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Producto <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.DropDownList("IdProducto", productosList, "-- Seleccione Producto --", new { @class = "form-control", id = "producto" })
                                            @Html.ValidationMessage("IdProducto")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Cliente <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.DropDownList("IdCliente", clientesList, "-- Seleccione Cliente --", new { @class = "form-control", id = "cliente" })
                                            @Html.ValidationMessage("IdArea")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Lote <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("Lote", Model.Lote, new { @class = "form-control" , id = "lote"})
                                            @Html.ValidationMessage("Lote")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Envasado (Sacos) <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("EnvasadoSac", Model.EnvasadoSac, new { @class = "form-control", id = "envasadoSac" })
                                            @Html.ValidationMessage("EnvasadoSac")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Peso del Saco (En kg) <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("Peso", Model.Peso, new { @class = "form-control", id = "peso" })
                                            @Html.ValidationMessage("Peso")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Retenido (Sacos)<span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("Retenido", Model.Retenido, new { @class = "form-control", id = "retenido" })
                                            @Html.ValidationMessage("Retenido")
                                        </div>
                                    </div>
                                </div>
                            </div>                            
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-lg-12 center">
                                <input type="submit" class="btn btn-primary" value="Guardar" />
                            </div>
                        </div>
                    </footer>
                }
            </section>
        </div>
    </div>
    <!-- end: page -->
</section>