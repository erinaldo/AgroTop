@using AgroFichasWeb.Models
@model CAL_PesoSaco
@{
    ViewBag.Title = "Pesos";
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";

    string actionName = "";
    if (Model.IdPesoSaco == 0)
    {
        ViewBag.SubTitle = "Crear Peso";
        actionName = "CrearPeso";
    }
    else
    {
        ViewBag.SubTitle = "Editar Peso";
        actionName = "EditarPeso";
    }
}
@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "") {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<!-- start: page -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">@ViewBag.SubTitle</h2>
            </header>
            @using (Html.BeginForm(actionName, "CALTiposSacos", FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="form-horizontal form-bordered">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Peso <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("Peso", Model.Peso, new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("Peso")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 center">
                            <input type="submit" class="btn btn-primary" value="Guardar este Peso" />
                        </div>
                    </div>
                </footer>
            }
        </section>
    </div>
</div>
<!-- end: page -->