@using AgroFichasWeb.Models
@model List<CAL_LEPalletsContenedor>
@{
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";
    Permiso permisosUsuario = (Permiso)ViewData["permisosUsuario"];
    CAL_LEPallets listaEmpaque = (CAL_LEPallets)ViewData["listaEmpaque"];
    ViewBag.Title = string.Format("Contenedores de la Lista de Empaque #{0}", listaEmpaque.IdLEPallets);
}
@section VendorCSS
{
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/select2/css/select2.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/select2-bootstrap-theme/select2-bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/jquery-datatables-bs3/assets/css/datatables.css")" />
}
@section VendorScripts
{
    <script src="@Url.Content("~/Content/porto/vendor/select2/js/select2.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables/media/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables/extras/TableTools/js/dataTables.tableTools.min.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables-bs3/assets/js/datatables.js")"></script>
}
@section CustomScripts
{
    <script>
        $('#datatable').dataTable({
            "ordering": true,
            "order": [0, 'desc'],
            "searching": true,
            "lengthChange": true,
            "language": {
                "emptyTable": "No hay registros"
            }
        });
    </script>
}

@if (!string.IsNullOrEmpty(Request["errMsg"]) || !string.IsNullOrEmpty(Request["okMsg"]))
{
    <div class="row">
        @if (!string.IsNullOrEmpty(Request["errMsg"]))
        {
            <div class="col-sm-12">
                <div class="mb-md">
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        @Request["errMsg"]
                    </div>
                </div>
            </div>
        }
        @if (!string.IsNullOrEmpty(Request["okMsg"]))
        {
            <div class="col-sm-12">
                <div class="mb-md">
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        @Request["okMsg"]
                    </div>
                </div>
            </div>
        }
    </div>
}
<section class="panel">
    <header class="panel-heading">
        <h2 class="panel-title">Administrar Contenedores</h2>
        <div class="mb-md" style="right: 15px;position: absolute;top: 15px;">
            <a href="@Url.Action("AgregarContenedor", "CALLEPallets", new { id = listaEmpaque.IdLEPallets,listaEmpaque.CAL_OrdenProduccion.IdOrdenProduccion })" class="btn btn-primary">Agregar Contenedor <i class="fa fa-plus"></i></a>
        </div>
    </header>
    <div class="panel-body">
        <table class="table table-bordered table-striped mb-none" id="datatable">
            <thead>
                <tr>
                    <th>Fecha de Despacho</th>
                    <th>Nº Guía de Despacho</th>
                    <th>Contenedor</th>
                    <th>Sello de Línea</th>
                    <th>Peso Neto</th>
                    <th>Peso Bruto</th>
                    <th>Tara</th>
                    <th>VGM</th>
                    <th>Producto</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr valign="top">
                        <td>@string.Format("{0:dd/MM/yyyy}", item.Fecha)</td>
                        <td>@item.NGuiaDespacho</td>
                        <td>@item.NContenedor</td>
                        <td>@item.SelloLinea</td>
                        <td>@item.PesoNeto.ToString("N0")</td>
                        <td>@item.PesoBruto.ToString("N0")</td>
                        <td>@item.Tara.ToString("N0")</td>
                        <td>@item.VGM.ToString("N0")</td>
                        <td>@Html.Raw(item.NProducto)</td>
                        <td>
                            @if (permisosUsuario.Actualizar)
                            {
                                <button id="@string.Format("edit_{0}_{1}", item.IdLEPallets, item.IdContenedor)" onclick="window.location.href='@Url.Action("EditarContenedor", new { id = item.IdLEPallets, IdContenedor = item.IdContenedor })'" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Editar Contenedor"> <i class="fa fa-edit"></i></button>
                            }
                            @if (permisosUsuario.Borrar)
                            {
                                <button id="@string.Format("delete_{0}_{1}", item.IdLEPallets, item.IdContenedor)" onclick="window.location.href='@Url.Action("EliminarContenedor", new { id = item.IdLEPallets, IdContenedor = item.IdContenedor })'" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Eliminar Contenedor"> <i class="fa fa-trash-o"></i></button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<!-- end: page -->