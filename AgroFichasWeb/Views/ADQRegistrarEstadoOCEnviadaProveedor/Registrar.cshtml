@using AgroFichasWeb.Models

@model ADQ_SolicitudCompra
@{
    ViewBag.Title = "Registrar Estado: Orden de Compra Enviada a Proveedor";
    Layout = "~/Views/Shared/_ResponsiveLayoutVien.cshtml";
}

@section VendorCSS
{

}
@section VendorScripts
{

}
@section CustomScripts
{

}
<div class="nav justify-content-center">
    @using (Html.BeginForm())
    {
        <div class="card mb-4">
            <div class="card-body ">
                @Html.Partial("../ADQOrdenesCompra/DetalleInvoiceRegistro", Model)
                <hr class="my-4">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Numero">Número OC*</label>
                        @Html.TextBox("NumeroOrdenCompra", "", new { @class = "form-control" })
                        @Html.ValidationMessage("NumeroOrdenCompra")
                    </div>
                </div>
                <div class="custom-control custom-checkbox mb-4">
                    <input type="checkbox" class="custom-control-input" id="IdEstado" name="IdEstado" value="4" required>
                    <label class="custom-control-label" for="IdEstado">
                        Confirmar
                    </label>
                    @Html.ValidationMessage("IdEstado")
                </div>
                <button type="submit" class="btn btn-primary">Registrar Estado: OC Enviada a Proveedor</button>
            </div>
        </div>

    }
</div>