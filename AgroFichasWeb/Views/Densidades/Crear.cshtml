@using AgroFichasWeb.Models
@model OPR_Densidad
@{
    ViewBag.Title = "Densidades";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";

    var tipoDensidadList = (IEnumerable<SelectListItem>)ViewData["tipoDensidadList"];
    var title = "";
    if (Model.IdDensidad == 0)
    {
        title = "Nueva Densidad";
    }
    else
    {
        title = "Editar Densidad";
    }
}

@section VendorCSS
{
    <!-- Specific Page Vendor CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/select2-bootstrap-theme/select2-bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/jquery-datatables-bs3/assets/css/datatables.css")" />
}

@section VendorScripts
{
    <!-- Specific Page Vendor -->
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables/media/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables/extras/TableTools/js/dataTables.tableTools.min.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables-bs3/assets/js/datatables.js")"></script>
}

@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "")
            {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<section role="main" class="content-body">
    <!-- start: page -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">@title</h2>
                </header>
                @using (Html.BeginForm())
                {
                    <div class="panel-body">
                        <div class="form-horizontal form-bordered">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Tipo de Densidad <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.DropDownList("IdTipoDensidad", tipoDensidadList, "-- Seleccione --", new { @class = "form-control" })
                                            @Html.ValidationMessage("IdTipoDensidad")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Valor <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("Valor", Model.Valor, new { @class = "form-control" })
                                            @Html.ValidationMessage("Valor")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-lg-12 center">
                                <input type="submit" class="btn btn-primary" value="Guardar" />
                            </div>
                        </div>
                    </footer>
                }
            </section>
        </div>
    </div>
    <!-- end: page -->
</section>