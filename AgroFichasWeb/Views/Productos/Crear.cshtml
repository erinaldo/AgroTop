@using AgroFichasWeb.Models
@model OPR_Producto
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
    var tipoProductosList = (IEnumerable<SelectListItem>)ViewData["tipoProductosList"];
    var title = "";
    if (Model.IdProducto == 0)
    {
        title = "Nuevo Producto";
    }
    else
    {
        title = "Editar Producto";
    }
}

@section VendorCSS
{
    <!-- Specific Page Vendor CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/select2-bootstrap-theme/select2-bootstrap.min.css")" />
}

@section VendorScripts
{
    <!-- Specific Page Vendor -->
}

@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "")
            {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<section role="main" class="content-body">
    <!-- start: page -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">@title</h2>
                </header>
                @using (Html.BeginForm())
                {
                    <div class="panel-body">
                        <div class="form-horizontal form-bordered">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Tipo de Producto <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.DropDownList("IdTipoProducto", tipoProductosList, "-- Seleccione Tipo de Producto --", new { @class = "form-control" })
                                            @Html.ValidationMessage("IdTipoProducto")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Nombre <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("Descripcion", Model.Descripcion, new { @class = "form-control" })
                                            @Html.ValidationMessage("Descripcion")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-lg-12 center">
                                <input type="submit" class="btn btn-primary" value="Guardar" />
                            </div>
                        </div>
                    </footer>
                }
            </section>
        </div>
    </div>
    <!-- end: page -->
</section>