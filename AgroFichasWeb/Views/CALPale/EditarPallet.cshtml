@using AgroFichasWeb.Models
@model CAL_Pale
@{
    ViewBag.Title = "Paletización";
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";
    ViewBag.SubTitle = "Editar Pallet";
}
@section VendorCSS
{
}
@section VendorScripts
{
}
@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "") {
                $(".field-validation-error").show();
            }
        });
    </script>
}
<!-- start: page -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">@ViewBag.SubTitle</h2>
            </header>
            @using (Html.BeginForm())
            {
                <div class="panel-body">
                    <div class="form-horizontal form-bordered">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Cantidad Paletizada <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("CantidadPaletizada", Model.CantidadPaletizada, new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("CantidadPaletizada")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.Hidden("CntMax", Model.CntMax)
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 center">
                            <input type="submit" class="btn btn-primary" value="Editar este Pallet" />
                        </div>
                    </div>
                </footer>
            }
        </section>
    </div>
</div>
<!-- end: page -->