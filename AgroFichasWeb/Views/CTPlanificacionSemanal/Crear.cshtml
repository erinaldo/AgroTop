        function GenerarTabla(obj){
            $("#LINEAS_AUX").val('');
            tabla = '<table class="table table-bordered table-striped mb-none">'
            tabla += '<thead>'
            tabla += '<tr>'
            tabla += '<th>#</th>'
            tabla += '<th>Linea</th>'
            tabla += '<th>Tipo documento</th>'
            tabla += '<th>Numero documento</th>'
            tabla += '<th>Código</th>'
            tabla += '<th>Producto</th>'
            tabla += '<th>Cantidad pendiente</th>'
            tabla += '<th>Cantidad entregada</th>'
            tabla += '<th>Bodega</th>'
            tabla += '<th class="hidden" ></th>'
            tabla += '<th class="hidden" ></th>'
            tabla += '</tr>'
            tabla += '</thead>'
            tabla += '<tbody>'
            if (obj.length > 0) {
                for (var i = 0; i < obj.length; i++) {
                    if (obj[i].OpenQty > 0) {
                        tabla += '<tr valign="top">'
                        tabla += '<td><input type="checkbox" value="Valor" class="form-check-input" name="SELECT" onclick="SetValue(this)" id="SELECTED"/></td>'
                        tabla += '<td>' + obj[i].LineNum + '</td>'
                        tabla += '<td>' + obj[i].TipoDoc + '</td>'
                        tabla += '<td>' + obj[i].DocNum + '</td>'
                        tabla += '<td>' + obj[i].ItemCode + '</td>'
                        tabla += '<td>' + obj[i].ItemName + '</td>'
                        tabla += '<td>' + obj[i].OpenQty.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + '</td>'
                        tabla += '<td>' + obj[i].Quantity.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + '</td>'
                        tabla += '<td>' + obj[i].WhsCode + '</td>'
                        tabla += '<td class="hidden">' + obj[i].OpenQty + '</td>'
                        tabla += '<td class="hidden">' + obj[i].Quantity + '</td>'
                        tabla += '</tr>'
                    }
                }
            } else {
                tabla += '<td colspan="8">No existen datos</td>'
            }

            tabla += '</tbody>'
            tabla += '</table>'

            $("#LINE_TABLE").html(tabla);
        }

        function SetValue(element) {
            var currentRow = $(element).closest("tr");
            var aux = $("#LINEAS_AUX").val();
            var val =
                  currentRow.find("td:eq(2)").text() + ','
                + currentRow.find("td:eq(3)").text() + ','
                + currentRow.find("td:eq(4)").text() + ','
                + currentRow.find("td:eq(5)").text() + ','
                + currentRow.find("td:eq(9)").text() + ','
                + currentRow.find("td:eq(10)").text() + ','
                + currentRow.find("td:eq(8)").text() + ','
                + currentRow.find("td:eq(1)").text();

            if ($("#LINEAS_AUX").val().includes('-' + val)) {

                $("#LINEAS_AUX").val(aux.replace('-' + val, ''));

            } else if ($("#LINEAS_AUX").val().includes(val + '-')) {

                $("#LINEAS_AUX").val(aux.replace(val + '-', ''));

            } else if ($("#LINEAS_AUX").val().includes(val)) {

                $("#LINEAS_AUX").val(aux.replace(val, ''));

            } else {

                if (aux.length > 0) {

                    $("#LINEAS_AUX").val(aux + '-' + val);

                } else {

                    $("#LINEAS_AUX").val(val);
                }
            }



        }

