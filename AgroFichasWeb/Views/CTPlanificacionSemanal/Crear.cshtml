        function GetDiasSemana() {
            var fInicio = $('#FechaDeInicio').val();
            if (!jQuery.isEmptyObject(fInicio)) {
                $("#dtLu").html('Cargando...');
                $("#dtMa").html('Cargando...');
                $("#dtMi").html('Cargando...');
                $("#dtJu").html('Cargando...');
                $("#dtVi").html('Cargando...');
                $("#dtSa").html('Cargando...');
                $("#dtDo").html('Cargando...');
            }

            $.getJSON(uri + '/Fechas/GetDiasSemana?fInicio=' + dateFormat(fInicio, "yyyy-mm-dd"))
                .done(function (result) {
                    var options = [];

                    if (result.length == 0) {
                        alert("No hay días de la semana disponibles");
                        DeleteSemanas();
                    }
                    else {
                        for (var i = 0; i < result.length; i++) {
                            if (result[i].DiaDeLaSemana == 'Monday') {
                                $("#dtLu").html(dateFormat(result[i].Fecha, "dd/mm/yyyy"));
                                $("#FechaLunes").val(dateFormat(result[i].Fecha, "yyyy-mm-dd"));
                            }
                            if (result[i].DiaDeLaSemana == 'Tuesday') {
                                $("#dtMa").html(dateFormat(result[i].Fecha, "dd/mm/yyyy"));
                                $("#FechaMartes").val(dateFormat(result[i].Fecha, "yyyy-mm-dd"));
                            }
                            if (result[i].DiaDeLaSemana == 'Wednesday') {
                                $("#dtMi").html(dateFormat(result[i].Fecha, "dd/mm/yyyy"));
                                $("#FechaMiercoles").val(dateFormat(result[i].Fecha, "yyyy-mm-dd"));
                            }
                            if (result[i].DiaDeLaSemana == 'Thursday') {
                                $("#dtJu").html(dateFormat(result[i].Fecha, "dd/mm/yyyy"));
                                $("#FechaJueves").val(dateFormat(result[i].Fecha, "yyyy-mm-dd"));
                            }
                            if (result[i].DiaDeLaSemana == 'Friday') {
                                $("#dtVi").html(dateFormat(result[i].Fecha, "dd/mm/yyyy"));
                                $("#FechaViernes").val(dateFormat(result[i].Fecha, "yyyy-mm-dd"));
                            }
                            if (result[i].DiaDeLaSemana == 'Saturday') {
                                $("#dtSa").html(dateFormat(result[i].Fecha, "dd/mm/yyyy"));
                                $("#FechaSabado").val(dateFormat(result[i].Fecha, "yyyy-mm-dd"));
                            }
                            if (result[i].DiaDeLaSemana == 'Sunday') {
                                $("#dtDo").html(dateFormat(result[i].Fecha, "dd/mm/yyyy"));
                                $("#FechaDomingo").val(dateFormat(result[i].Fecha, "yyyy-mm-dd"));
                            }
                        }
                    }
                })
                .fail(function (jqXHR, textStatus, err) {
