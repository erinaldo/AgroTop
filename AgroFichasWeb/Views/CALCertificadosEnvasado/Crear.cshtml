        jQuery('#AgregarFechaElaboracion').datetimepicker({
            i18n: {
                es: {
                    months: [
                        'Enero', 'Febrero', 'Marzo', 'Abril',
                        'Mayo', 'Junio', 'Julio', 'Agosto',
                        'Septiembre', 'Octubre', 'Noviembre', 'Diciembre',
                    ],
                    dayOfWeek: [
                        "Do", "Lu", "Ma", "Mi",
                        "Ju", "Vi", "Sa",
                    ]
                }
            },
            startDate: new Date(),
            dayOfWeekStart: 1,
            format: 'Y/m/d',
            mask: true,
            timepicker: false,
            todayButton: true,
            value: '@string.Format("{0:yyyy/MM/dd}", DateTime.Now)',
            weeks: true,
            onSelectDate: function (ct, $i) {
                var arrFechas = $("#FechaElaboracion").val().split(',').filter(function (elements) { return elements !== '' });
                arrFechas.push(ct.dateFormat('DD/MM/YY'));
                if (arrFechas.length > 1) {
                    var arrSorted = arrFechas.sort(SortByDate);
                    $("#FechaElaboracion").val($.unique(arrSorted).toString());
                }
                else {
                    $("#FechaElaboracion").val(ct.dateFormat('DD/MM/YY'));
                }
            }
        });

        function SortByDate(a, b) {
            var amyDate = a.split("/");
            var aNewDate = new Date(amyDate[1] + "," + amyDate[0] + "," + amyDate[2]).getTime();
            var bmyDate = b.split("/");
            var bNewDate = new Date(bmyDate[1] + "," + bmyDate[0] + "," + bmyDate[2]).getTime();
            return ((aNewDate < bNewDate) ? -1 : ((aNewDate > bNewDate) ? 1 : 0));
        }

        Date.parseDate = function (input, format) {
            return moment(input, format).toDate();
        };
        Date.prototype.dateFormat = function (format) {
            return moment(this).format(format);
        };
    </script>
