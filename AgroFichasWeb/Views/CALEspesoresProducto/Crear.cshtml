@using AgroFichasWeb.Models
@model CAL_EspesorProducto
@{
    ViewBag.Title = "Espesores de Producto";
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";

    if (Model.IdEspesorProducto == 0)
    {
        ViewBag.SubTitle = "Crear Espesor de Producto";
    }
    else
    {
        ViewBag.SubTitle = "Editar Espesor de Producto";
    }
}
@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "") {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<!-- start: page -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">@ViewBag.SubTitle</h2>
            </header>
            @using (Html.BeginForm())
            {
                <div class="panel-body">
                    <div class="form-horizontal form-bordered">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Mínimo <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("Min", Model.Min, new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("Min")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Máximo <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("Max", Model.Max, new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("Max")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Observaciones <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("Observaciones", Model.Observaciones, new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("Observaciones")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 center">
                            <input type="submit" class="btn btn-primary" value="Guardar este Espesor de Producto" />
                        </div>
                    </div>
                </footer>
            }
        </section>
    </div>
</div>
<!-- end: page -->