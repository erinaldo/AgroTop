@using AgroFichasWeb.Models
@model CAL_Saco
@{
    ViewBag.Title = "Sacos";
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";

    if (Model.IdTipoSaco == 0)
    {
        ViewBag.SubTitle = "Crear Saco";
    }
    else
    {
        ViewBag.SubTitle = "Editar Saco";
    }
}
@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "") {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<!-- start: page -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">@ViewBag.SubTitle</h2>
            </header>
            @using (Html.BeginForm())
            {
                <div class="panel-body">
                    <div class="form-horizontal form-bordered">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Nombre <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("Nombre", Model.Nombre, new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("Nombre")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Tipo <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdTipoSaco", Model.GetTipoSacos(Model.IdTipoSaco), "(Seleccione Tipo)", new { @class = "form-control" })
                                        @Html.ValidationMessage("IdTipoSaco")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Arte <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdTipoArteSaco", Model.GetTipoArteSacos(Model.IdTipoArteSaco), "(Seleccione Arte)", new { @class = "form-control" })
                                        @Html.ValidationMessage("IdTipoArteSaco")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Color del Hilo <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdTipoColorHiloSaco", Model.GetTipoColoresHiloSaco(Model.IdTipoColorHiloSaco), "(Seleccione Color del Hilo)", new { @class = "form-control" })
                                        @Html.ValidationMessage("IdTipoColorHiloSaco")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Bolsa Interior <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.CheckBox("Recubierto", Model.Recubierto)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 center">
                            <input type="submit" class="btn btn-primary" value="Guardar Saco" />
                        </div>
                    </div>
                </footer>
            }
        </section>
    </div>
</div>
<!-- end: page -->