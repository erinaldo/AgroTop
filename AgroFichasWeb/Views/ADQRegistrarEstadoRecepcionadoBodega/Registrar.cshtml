@using AgroFichasWeb.Models

@model ADQ_SolicitudCompra
@{
    ViewBag.Title = "Registrar Estado: Recepcionado en Bodega";
    Layout = "~/Views/Shared/_ResponsiveLayoutVien.cshtml";
}

@section VendorCSS
{

}
@section VendorScripts
{
    <script src="~/Content/vien/js/vendor/ckeditor5-build-classic/ckeditor.js"></script>
}
@section CustomScripts
{

}
<div class="nav justify-content-center">
    @using (Html.BeginForm())
    {
        <div class="card mb-4">
            <div class="card-body ">
                @Html.Partial("../ADQOrdenesCompra/DetalleInvoiceRegistro", Model)
                <hr class="my-4">
                <div class="form-group">
                    <label for="ObservacionRecepcionadaBodega">Observación*</label>
                    @Html.TextArea("ObservacionRecepcionadaBodega", Model.ObservacionRecepcionadaBodega, new { id = "ckEditorClassic" })
                    @Html.ValidationMessage("ObservacionRecepcionadaBodega")
                </div>
                <div class="custom-control custom-checkbox mb-4">
                    <input type="checkbox" class="custom-control-input" id="IdEstado" name="IdEstado" value="5" required>
                    <label class="custom-control-label" for="IdEstado">
                        Confirmar
                    </label>
                    @Html.ValidationMessage("IdEstado")
                </div>
                <button type="submit" class="btn btn-primary">Registrar Estado: Recepcionado en Bodega</button>
            </div>
        </div>

    }
</div>