@using AgroFichasWeb.Models
@model CAL_PresetMaricoLimitedMicrobiologicalParameter
@{
    ViewBag.Title = "Marico Limited";
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";

    if (Model.IdPresetMaricoLimitedMicrobiologicalParameter == 0)
    {
        ViewBag.SubTitle = "Crear Preset de Parámetro de Microbiología";
    }
    else
    {
        ViewBag.SubTitle = "Editar Preset de Parámetro de Microbiología";
    }
}
@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "") {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<!-- start: page -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">@ViewBag.SubTitle</h2>
            </header>
            @using (Html.BeginForm())
            {
                <div class="panel-body">
                    <div class="form-horizontal form-bordered">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Ficha Técnica <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdFichaTecnica", Model.GetFichasTecnicas(Model.IdFichaTecnica), new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("IdFichaTecnica")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Parámetro <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdParametroMicrobiologia", Model.GetParametros(Model.IdParametroMicrobiologia), new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("IdParametroMicrobiologia")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Marico Spec <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("MaricoSpec", Model.MaricoSpec, new { @class = "form-control", maxlength = "20" })
                                        @Html.ValidationMessage("MaricoSpec")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Sort Order <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.TextBox("SortOrder", Model.SortOrder, new { @class = "form-control", maxlength = "50" })
                                        @Html.ValidationMessage("SortOrder")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 center">
                            <input type="submit" class="btn btn-primary" value="Guardar este Preset" />
                        </div>
                    </div>
                </footer>
            }
        </section>
    </div>
</div>
<!-- end: page -->