@Html.ValidationSummary("No fue posible procesar su solicitud. Por favor haga las siguientes correcciones:")

<section role="main" class="content-body">
    <!-- start: page -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">@ViewBag.Title</h2>
                </header>
                @using (Html.BeginForm())
                {
                    <div class="panel-body">
                        <div class="form-horizontal form-bordered">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Nombre <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("Nombre", Model.Nombre, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessage("Nombre", " ")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">¿Planta?</label>
                                        <div class="col-sm-6">
                                            @Html.CheckBox("EsPlanta", Model.EsPlanta, new { @class = "form-check-input" })
                                            @Html.ValidationMessage("EsPlanta", " ")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">¿Automática?</label>
                                        <div class="col-sm-6">
                                            @Html.CheckBox("EsPesajeAutomatico", Model.EsPesajeAutomatico, new { @class = "form-check-input" })
                                            @Html.ValidationMessage("EsPesajeAutomatico", " ")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Romana entrada <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("RomanaEntrada", Model.RomanaEntrada, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessage("RomanaEntrada", " ")
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <label class="col-sm-3 control-label">Romana salida <span class="required">*</span></label>
                                        <div class="col-sm-6">
                                            @Html.TextBox("RomanaSalida", Model.RomanaSalida, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessage("RomanaSalida", " ")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="panel-footer">
                        <div class="row">
                            <div class="col-lg-12 center">
                                <input type="submit" class="btn btn-primary" value="Guardar" />
                            </div>
                        </div>
                    </footer>
                }
            </section>
        </div>
    </div>
    <!-- end: page -->
</section>