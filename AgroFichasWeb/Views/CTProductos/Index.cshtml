@using AgroFichasWeb.Models
@using AgroFichasWeb.Views

@model List<CTR_Producto>
@{
    ViewBag.Title = "Control de Tiempo";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
    Permiso permisosUsuario = (Permiso)ViewData["permisosUsuario"];
    var plantasUsuario = (List<PlantaUsuario>)ViewData["plantasUsuario"];
    var UserID = (int)ViewData["UserID"];
}
@section VendorCSS
{
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/select2/css/select2.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/select2-bootstrap-theme/select2-bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/porto/vendor/jquery-datatables-bs3/assets/css/datatables.css")" />
}
@section VendorScripts
{
    <script src="@Url.Content("~/Content/porto/vendor/select2/js/select2.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables/media/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables/extras/TableTools/js/dataTables.tableTools.min.js")"></script>
    <script src="@Url.Content("~/Content/porto/vendor/jquery-datatables-bs3/assets/js/datatables.js")"></script>
}
@section CustomScripts
{
    <script>
        $('#datatable').dataTable({
            "ordering": true,
            "order": [0, 'asc'],
            "searching": false,
            "lengthChange": true,
            "language": {
                "emptyTable": "No hay registros"
            }
        });
    </script>
}

<section role="main" class="content-body">
    @if (!string.IsNullOrEmpty(Request["errMsg"]) || !string.IsNullOrEmpty(Request["okMsg"]))
    {
        <div class="row">
            @if (!string.IsNullOrEmpty(Request["errMsg"]))
            {
                <div class="col-sm-12">
                    <div class="mb-md">
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            @Request["errMsg"]
                        </div>
                    </div>
                </div>
            }
            @if (!string.IsNullOrEmpty(Request["okMsg"]))
            {
                <div class="col-sm-12">
                    <div class="mb-md">
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            @Request["okMsg"]
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Administrar Productos</h2>
            @if (permisosUsuario.Crear)
            {
                <div class="mb-md" style="right: 15px;position: absolute;top: 15px;">
                    <a href="@Url.Action("Crear", "CTProductos", new { })" class="btn btn-primary">Crear Producto <i class="fa fa-plus"></i></a>
                </div>
            }
        </header>
        <div class="panel-body">
            <table class="table table-bordered table-striped mb-none" id="datatable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Planta</th>
                        <th>Empresas</th>
                        <th>Envases</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr valign="top">
                        <td>@item.IdProducto</td>
                        <td>@item.Nombre</td>
                        <td>
                            <ul>
                                @foreach (var planta in item.GetPlantas(UserID ,item.IdProducto).Where(X => X.Tiene == true && X.TienePlanta == true))
                                {
                                    //foreach (var p in plantasUsuario)
                                    //{
                                    //    if (planta.IdPlantaProduccion == p.IdPlantaProduccion)
                                    //    {
                                        <li>@planta.PlantaProduccion.Nombre</li>
                                        @*}
                                    }*@
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var empresa in item.GetEmpresas(item.IdProducto).Where(X => X.Tiene == true))
                                {
                                    <li>@empresa.Empresa.Nombre</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var empresa in item.GetEnvases(item.IdProducto).Where(X => X.Tiene == true))
                                {
                                    <li>@empresa.CTR_Envase.Descripcion</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @if (permisosUsuario.Actualizar)
                            {
                                <button id="edit_@item.IdProducto" onclick="window.location.href='@Url.Action("editar", new { id = item.IdProducto })'" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Editar"> <i class="fa fa-edit"></i></button>
                            }
                            @if (permisosUsuario.Borrar)
                            {
                                <button id="delete_@item.IdProducto" onclick="window.location.href='@Url.Action("eliminar", new { id = item.IdProducto })'" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Eliminar"> <i class="fa fa-trash-o"></i></button>
                            }
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
    <!-- end: page -->
</section>