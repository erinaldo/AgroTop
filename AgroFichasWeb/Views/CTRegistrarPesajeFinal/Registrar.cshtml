            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode == 46) {
                if (txt.value.length == 0 && txt.value.indexOf('.') === -1) {
                    return false;
                }
                if (txt.value.indexOf('.') === -1) {
                    return true;
                } else {
