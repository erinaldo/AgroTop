    List<CTR_ControlTiempo_Detalle> ctr_d = (from c in dc.CTR_ControlTiempo_Detalle where c.IdControlTiempo == Model.IdControlTiempo && c.NumeroGuia != null select c).OrderBy(c => c.IdControlTiempoDetalle).ToList();

    string nguias = "";

    if (ctr_d.Count() > 0)
    {
        foreach (var item in ctr_d)
        {
            if (nguias.Length == 0)
            {
                nguias += item.NumeroGuia;
            }
            else
            {
                nguias += " - " + item.NumeroGuia;
            }
        }

    }
    else
    {
        nguias = "No existen números de guía asociados";
    }

    ViewBag.Title = "Control de Tiempo";
    ViewBag.SubTitle = "Registrar Pesaje Final | Camion N° " + Model.IdControlTiempo + " | " + nguias;

    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
    decimal? PesoFinal = 0;
    if (Model.PesoFinal != null)
    {
        PesoFinal = (decimal)(Model.PesoFinal - Model.PesoInicial);
    }

    //Variables para api




}
