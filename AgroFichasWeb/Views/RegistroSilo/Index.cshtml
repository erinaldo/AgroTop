@using AgroFichasWeb.Models
@using AgroFichasWeb.ViewModels.Operaciones
@model RegistroSiloViewModel

@{
    ViewBag.Title = "Registro de Turno de Silos";
    Layout = "~/Views/Shared/_ResponsiveLayout.cshtml";
}

