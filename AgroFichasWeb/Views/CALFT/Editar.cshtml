@using AgroFichasWeb.Models
@model CAL_DetalleOrdenProduccion
@{
    ViewBag.Title = "Órdenes de Producción";
    Layout = "~/Views/Shared/_ResponsiveLayoutVertical.cshtml";
}
@section CustomScripts
{
    <script>
        $(document).ready(function () {
            if ($(".field-validation-error").html() != "") {
                $(".field-validation-error").show();
            }
        });
    </script>
}

<!-- start: page -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Asociar Ficha Técnica a @Model.CAL_Subproducto.Nombre</h2>
            </header>
            @using (Html.BeginForm())
            {
                <div class="panel-body">
                    <div class="form-horizontal form-bordered">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Familia de Productos <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        <span class="form-control">@Model.CAL_Producto.Nombre</span>
                                        @Html.Hidden("IdProducto", Model.IdProducto)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Producto <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        <span class="form-control">@Model.CAL_Subproducto.Nombre</span>
                                        @Html.Hidden("IdSubproducto", Model.IdSubproducto)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-12">
                                    <label class="col-sm-3 control-label">Fichas Técnica <span class="required">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownList("IdFichaTecnica", Model.GetFichasTecnicas(Model.IdFichaTecnica), "(Seleccione Fichas Técnica)", new { @class = "form-control" })
                                        @Html.ValidationMessage("IdFichaTecnica")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-lg-12 center">
                            <input type="submit" class="btn btn-primary" value="Asociar" />
                        </div>
                    </div>
                </footer>
            }
        </section>
    </div>
</div>
<!-- end: page -->